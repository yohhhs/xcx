page {
  background-color: #fff;
}
.address-item {
  position: relative;
  margin: 0 30rpx;
  padding: 30rpx 80rpx 30rpx 0;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
}
.address-info {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}
.address-desc {
  font-size: 24rpx;
  color: #666;
}
.edit-address {
  position: absolute;
  right: 10rpx;
  top: 50%;
  width: 40rpx;
  height: 40rpx;
  transform: translateY(-50%);
}
.phone {
  margin: 0 30rpx;
}
.default-flag {
  display: inline-block;
  padding: 6rpx 8rpx;
  font-size: 20rpx;
  color: #ed9934;
  border: 1px solid currentColor;
  border-radius: 4rpx;
}
.footer-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}
.add-address-btn {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ed9934;
  border: 1px solid currentColor;
  border-radius: 10rpx;
}