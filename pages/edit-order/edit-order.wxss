.pay-type {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 29rpx 24rpx; 
  font-size: 28rpx;
  background-color: #fff;
}
.pay-type-text {
  color: #666;
}
.wx-sign {
  display: inline-flex;
  align-items: center;
}
.wx-icon {
  margin-right: 12rpx;
  width: 48rpx;
  height: 40rpx;
}
.wx-pay-text {
  color: #149e2b;
}
.order-detail-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding-left: 49rpx;
  height: 100rpx;
  font-size: 34rpx;
  color: #e84646;
  background-color: #fff;
}
.confirm-pay-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  margin: 0;
  width: 279rpx;
	height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 0;
	background-image: linear-gradient(-90deg, 
		#ec8541 0%, 
		#edae27 100%);
}
