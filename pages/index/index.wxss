/**index.wxss**/
.product-item {
  position: relative;
  padding: 30rpx 30rpx 30rpx 320rpx;
  height: 260rpx;
  border-bottom: 1px solid #f2f2f2;
  background-color: #fff;
}
.img-wrapper {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 260rpx;
  height: 260rpx;
  border-radius: 4rpx;
  overflow: hidden;
}
.product-img {
  width: 100%;
  height: 100%;
}
.product-price {
  position: absolute;
  left: 320rpx;
  bottom: 30rpx;
}
.c-price {
  margin-right: 21rpx;
  font-size: 34rpx;
  color: #ed9934;
  font-weight: 700;
}
.m-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.product-name {
  margin-top: 10rpx;
  line-height: 1.4;
  font-size: 32rpx;
  color: #555;
}
.product-order {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.go-cart {
  position: absolute;
  right: 40rpx;
  bottom: 30rpx;
  width: 65rpx;
  height: 65rpx;
}
.goods-title {
  padding-top: 25rpx;
  height: 65rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  font-size: 36rpx;
  color: #e84646;
}
.title-icon {
  margin-right: 8rpx;
  width: 40rpx;
  height: 40rpx;
}
.type-title {
  padding-left: 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  color: #e84646;
  background-color: rgba(237, 154, 52, 0.096);
}
.type-title-icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.type-list {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
  height: 350rpx;
  white-space: nowrap;
  background-color: rgba(237, 154, 52, 0.096);
}
.type-list-item {
  margin-left: 15rpx;
  display: inline-block;
  padding: 10rpx;
  width: 207rpx;
  border-radius: 8rpx;
  background-color: #fff;
}
.type-list-item:last-child {
  margin-right: 15rpx;
}
.type-list-item-img {
  width: 100%;
  height: 240rpx;
  border-radius: 4rpx;
}
.type-list-item-name {
  padding: 0 8rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #555;
}
.price-item {
  padding-bottom: 5rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #ed9934;
}
.p12 {
  margin-left: 10rpx;
  font-size: 20rpx;
  font-weight: 1;
  text-decoration: line-through;
  color: #999;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}