/**index.wxss**/
.product-item {
  position: relative;
  padding: 30rpx 30rpx 30rpx 340rpx;
  height: 280rpx;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
}
.img-wrapper {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 280rpx;
  height: 280rpx;
}
.product-img {
  width: 100%;
  height: 100%;
}
.product-price {
  position: absolute;
  left: 340rpx;
  bottom: 30rpx;
}
.c-price {
  margin-right: 21rpx;
  font-size: 34rpx;
  color: #e84646;
}
.m-price {
  font-size: 24rpx;
  color: #c1bfbf;
  text-decoration: line-through;
}
.product-name {
  margin-top: 10rpx;
  line-height: 1.4;
  font-size: 32rpx;
  color: #353535;
}
.product-order {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.go-cart {
  position: absolute;
  right: 40rpx;
  bottom: 30rpx;
  width: 60rpx;
  height: 60rpx;
}
.goods-title {
  margin-top: 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  font-size: 40rpx;
  color: #e84646;
}
.title-icon {
  margin-right: 8rpx;
  width: 50rpx;
  height: 50rpx;
}
.type-title {
  padding: 20rpx 0;
  text-align: center;
  font-size: 36rpx;
  color: #ed9934;
}
.type-list {
  width: 100%;
  height: 350rpx;
  white-space: nowrap;
}
.type-list-item {
  margin-left: 15rpx;
  display: inline-block;
  padding: 10rpx;
  width: 225rpx;
  border-radius: 4rpx;
  background-color: #fff;
}
.type-list-item-img {
  width: 100%;
  height: 240rpx;
}
.type-list-item-name {
  padding: 0 8rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #666;
}
.price-item {
  padding-bottom: 5rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #ed9934;
}
.p12 {
  margin-left: 10rpx;
  font-size: 20rpx;
  font-weight: 1;
  text-decoration: line-through;
  color: #999;
}