/**index.wxss**/
.product-number {
  margin-bottom: 20rpx;
  padding-left: 33rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #333;
  background-color: #fff;
}
.product-item {
  position: relative;
  margin-bottom: 20rpx;
  height: 640rpx;
  padding: 28rpx 30rpx 10rpx;
  background-color: #fff;
}
.img-wrapper {
  position: relative;
  width: 100%;
  height: 370rpx;
}
.product-img {
  width: 100%;
  height: 100%;
}
.time-down {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}
.product-price {
  margin-top: 25rpx;
}
.c-price {
  margin-right: 21rpx;
  font-size: 34rpx;
  color: #e84646;
}
.m-price {
  font-size: 24rpx;
  color: #c1bfbf;
  text-decoration: line-through;
}
.product-name {
  margin-top: 25rpx;
  font-size: 32rpx;
  color: #353535;
}
.product-order {
  margin-top: 31rpx;
  font-size: 24rpx;
  color: #999;
}
.go-cart {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
}