
page {
  background-color: #fff;
}
checkbox .wx-checkbox-input{
   border-radius: 50%;
   width: 34rpx;
   height: 34rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border-color: #f79d1d;
   background: #f79d1d;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;
   width: 34rpx;
   height: 34rpx;
   line-height: 34rpx;
   text-align: center;
   font-size:25rpx; 
   color:#fff; 
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.shopping-item {
  position: relative;
  padding: 30rpx 80rpx;
  border-bottom: 1px solid #f0f0f0;
}
.item-checked {
  position: absolute;
  left: 23rpx;
  top: 50%;
  transform: translateY(-50%)
}
.end-time {
  margin-left: 13rpx;
  line-height: 65rpx;  
  color: #999;
  font-size: 23rpx;
}
.del-icon {
  position: absolute;
  right: 25rpx;
  top: 105rpx;
  width: 30rpx;
  height: 30rpx;
}
.item-content {
  position: relative;
  padding-left: 205rpx;
  height: 180rpx;
}
.item-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 180rpx;
}
.item-desc {
  position: relative;
  height: 180rpx;
}
.shopping-name {
  font-size: 26rpx;
  color: #333;
}
.shopping-price {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 65rpx;
}
.min-count {
  margin-left: 40rpx;
  font-size: 24rpx;
  color: #666;
}
.number-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
}
.price {
  font-size: 28rpx;
  color: #e84646;
}
.all-select {
  position: absolute;
  padding-left: 24rpx;
  width: 100%;
  bottom: 100rpx;
  left: 0;
  font-size: 24rpx;
}
.shopping-count {
  margin-left: 25rpx;
  color: #999
}
.all-select, .count-number {
  color: #666;
}
.balance {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  padding-left: 24rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.count-price {
  height: 100rpx;
  font-size: 26rpx;
  color: #666;
}
.price-number {
  font-size: 48rpx;
  color: #e84646;
}
.balance-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 279rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-image: linear-gradient(-90deg, 
		#ec8541 0%, 
		#edae27 100%);
  border-radius: 0;
}

.confirm-content {
  padding: 10rpx 0;
  display: flex;
  justify-content: center;
}
