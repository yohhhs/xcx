page {
  background-color: #fff;
}
.user-bg {
  width: 100%;
  height: 370rpx;
}
.user-info {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 340rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.avatar {
  margin: 23rpx 0;
  width: 121rpx;
  height: 121rpx;
  border-radius: 50%;
}
.user-name {
  margin-bottom: 18rpx;
  font-size: 32rpx;
}
.sale-name {
  margin-bottom: 40rpx;
  font-size: 26rpx;
}
.user-tel {
  font-size: 28rpx;
}
.gift-info-wrapper {
  display: flex;
  justify-content: space-around
}
.gift-info-item {
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
}
.gift-number {
  margin-bottom: 10rpx;
  text-align: center;
  font-size: 45rpx;
}
.number-lh {
  margin-right: 10rpx;
  color: #ec9934;
}
.number-normal {
  color: #666;
}
.gift-info-icon {
  width: 31rpx;
  height: 29rpx; 
}
.type-name {
  font-size: 25rpx;
  color: #999;
}
.my-order {
  position: relative;
  padding: 30rpx 0 30rpx 30rpx;
  font-size: 28rpx;
  color: #555;
  border-bottom: 1rpx solid #f2f2f2;
}
.my-order-icon {
  position: absolute;
  top: 35rpx;
  right: 31rpx;
  width: 15rpx;
  height: 26rpx;
}
.order-menu {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 25rpx 0 35rpx;
  border-bottom: 20rpx solid #f0f0f0;
}
.order-menu-item {
  position: relative;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}
.order-number {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  top: -20rpx;
  right: -20rpx;
  line-height: 29rpx;
  text-align: center;
  font-size: 18rpx;
  color: #fff;
  border-radius: 50%;
  background-color: #e84646;
}
.order-icon {
  margin-bottom: 20rpx;
  width: 58rpx;
  height: 58rpx;
}
.order-type {
  font-size: 23rpx;
  color: #666;
}
.change-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 94rpx 0 80rpx;
  height: 110rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.change-type {
 font-size: 28rpx;
 color: #666; 
}
.change-content {
  font-size: 26rpx;
  color: #999;
}
.change-icon1, .change-icon2 {
  position: absolute;
  top: 40rpx;
}
.change-icon1 {
  top: 35rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.change-icon2 {
  left: 42rpx;
  width: 33rpx;
  height: 35rpx;
}
.right-icon {
  position: absolute;
  top: 43rpx;
  right: 31rpx;
  width: 15rpx;
  height: 26rpx;
}
.feedback-btn {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
}